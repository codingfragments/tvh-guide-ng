{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "@tvh-guide/shared": ["../../libs/shared/src"],
      "@tvh-guide/tvheadend-client": ["../../libs/tvheadend-client/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
