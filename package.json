{
  "name": "@tvh-guide/root",
  "private": true,
  "version": "0.0.0",
  "description": "Electronic Program Guide for TVHeadend",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r clean",
    "validate:openapi": "spectral lint docs/api/tvheadend/openapi.yaml docs/api/epg-cache/openapi.yaml --format stylish",
    "docs:build": "echo 'Stoplight Elements uses static HTML - no build needed'",
    "docs:serve": "browser-sync start --server docs/api --files 'docs/api/**/*' --no-open --port 8080",
    "docs:watch": "browser-sync start --server docs/api --files 'docs/api/**/*.yaml,docs/api/**/*.yml,docs/api/**/*.html' --no-open --port 8080",
    "docs:generate-md": "npx widdershins --resolve docs/api/tvheadend/openapi.yaml -o docs/api/tvheadend/API_REFERENCE.md && npx widdershins --resolve docs/api/epg-cache/openapi.yaml -o docs/api/epg-cache/API_REFERENCE.md",
    "dev:storybook": "pnpm --filter @tvh-guide/epg-cache run dev & pnpm --filter @tvh-guide/web run storybook & wait"
  },
  "volta": {
    "node": "24.13.1",
    "pnpm": "10.4.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stoplight/spectral-cli": "^6.15.0",
    "browser-sync": "^3.0.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.51.0",
    "svelte-eslint-parser": "^1.4.1",
    "typescript-eslint": "^8.55.0"
  }
}
