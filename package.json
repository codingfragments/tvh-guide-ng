{
  "name": "@tvh-guide/root",
  "private": true,
  "version": "0.0.0",
  "description": "Electronic Program Guide for TVHeadend",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "validate:openapi": "spectral lint docs/api/tvheadend/openapi.yaml --format stylish",
    "docs:build": "redoc-cli build docs/api/tvheadend/openapi.yaml -o docs/api/tvheadend/api-docs.html",
    "docs:serve": "redoc-cli serve docs/api/tvheadend/openapi.yaml --port 8080",
    "docs:watch": "redoc-cli serve docs/api/tvheadend/openapi.yaml --watch --port 8080"
  },
  "volta": {
    "node": "24.13.1",
    "pnpm": "10.4.1"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.15.0",
    "redoc-cli": "^0.13.21"
  }
}
